{% extends "base.twig" %}
{% block content %}

<div class="height-100vh background-purple flex flex-column padding-xxl--top-200 padding-l--top-100 padding-s--top-80 padding-xxl--bottom-100">
    <div class="flex flex-column align-items-center justify-content-center">
        <div class="font--xxl-46 font-white font-bold margin-xxl--bottom-24 margin-l--left-24 margin-l--right-24 text--l-center padding-s--top-80">Pitajte Isidoru</div>
        <div class="kontakt-line"></div>
        <div class="font--xxl-16 font-white text-center margin-xxl--top-24 margin-xxl--bottom-60 margin-l--left-24 margin-l--right-24">Postavljanje pitanja je prvi korak ka samospoznaji.</div>
    </div>
    <div >
        <form id="pitajteIsidoru" onsubmit="return false;" class="flex justify-content-between flex--l-column align-items--l-center padding-xxl--left-135 padding-xxl--right-135 padding-xs--left-23 padding-xs--right-23">
          <div class="kontakt-side flex flex-column">
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Ime i Prezime</div>
            <input style="color: #fff;" class="isidora kontakt-form margin-xxl--bottom-20" id="form-name" type="text"/>
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Email</div>
            <input style="color: #fff;" class="isidora kontakt-form margin-xxl--bottom-20" id="form-email" type="text"/>

            <input id="form-title" type="text" style="display:none" value="pitajteIsidoru"/>
          </div>
          <div class="kontakt-side flex flex-column">
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Poruka</div>
            <textarea style="color: #fff;" class="isidora kontakt-form margin-xxl--bottom-24" id="form-message" type="text"></textarea>

            <div id="form-status-message" style="text-align: center; margin-bottom: 1rem; color: #FFFFFF;display:none">
              Hvala na ukazanom poverenju. Odgovor će biti poslat u najkaćem mogućemroku.
            </div>

            <div class="w-100 flex justify-content-end justify-content--l-center">
                <button onclick="submitForm()" class="button-midd font-white font--xxl-14 border-purple-light">POŠALJI</button>
            </div>
          </div>
        </form>
    </div>
</div>

{% endblock %}