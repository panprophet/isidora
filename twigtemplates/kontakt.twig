{% extends "base.twig" %}
{% set Descriptions = fetch("Descriptions") %}
{% block description %}{{Descriptions.Kontakt}}{% endblock %}
{% block content %}

<div style="height: 3.71rem;"></div>

<div class="flex flex-column margin-xxl--top-200 margin-l--top-100 margin-xxl--bottom-100">
    <div class="flex flex-column align-items-center justify-content-center">
        <div class="font--xxl-46 font-purple font-bold margin-xxl--bottom-24">Započni promenu.</div>
        <div class="kontakt-line"></div>
        <div class="font--xxl-16 font-purple text-center margin-xxl--top-24 margin-xxl--bottom-60">Nije potrebno videti celo stepenište da bi napravio prvi korak.</div>
    </div>
    <div >
        <form id="contactform" class="flex justify-content-between flex--l-column align-items--l-center padding-xxl--left-135 padding-xxl--right-135 padding-xs--left-23 padding-xs--right-23">
          <div class="kontakt-side flex flex-column">
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Ime i Prezime</div>
            <input class="kontakt-form margin-xxl--bottom-20" id="name" type="text"/>
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Email</div>
            <input class="kontakt-form margin-xxl--bottom-20" id="email" type="text"/>
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Naslov</div>
            <input class="kontakt-form margin-xxl--bottom-20" id="title" type="text"/>
          </div>
          <div class="kontakt-side flex flex-column">
            <div class="font-xxl--18 font-grey--form margin-xxl--bottom-10 text--l-center">Poruka</div>
            <textarea class="kontakt-form margin-xxl--bottom-24" id="message" type="text"></textarea>
            <div class="w-100 flex justify-content-end justify-content--l-center">
                <button class="button-midd font-white font--xxl-14 border-purple-light">POŠALJI</button>
            </div>
          </div>
          {# <button class="button-midd font-white font--xxl-14 border-purple-light">POŠALJI</button> #}
        </form>
    </div>
</div>

