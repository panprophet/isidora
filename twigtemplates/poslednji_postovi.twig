    {% for item in Blog %}
    {% if loop.revindex0 < 4 and item.Istaknut == 'false' %}
    <div class="blog-posts-post flex flex-column">
        <div class="blog-posts-post-image margin-xxl--bottom-32" style="background-image: url('img/{{item.Slika}}')"></div>
        <div class="w-70 w--l-100 font--xxl-24 font-purple margin-xxl--bottom-24">{{item.Naslov}}</div>
        <div class="font--xxl-16 font-purple-light margin-xxl--bottom-32">{{item.Opis}}</div>
        <a href="post/{{item.Slug}}" class="font--xxl-16 font-bold font-purple font-italic margin-xxl--bottom-32">Saznaj vi≈°e</a>
    </div>
    {% endif %}
    {% endfor %}
</div>
